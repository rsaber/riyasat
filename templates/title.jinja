{% macro title(title, camera, date, description) %}

<div class="container">
    <div class="row">
        <div class="twelve column" style="margin-top: 1%">
            <h1 class="lens-journal-title">{{title}}</h1>
            <p class="lens-journal-camera-type">{{camera}}</p>
            <p class="lens-journal-date">{{date}}</p>
            <p class="lens-journal-description">
                {{description}}
            </p>
        </div>
    </div>
</div>

{% endmacro %}
