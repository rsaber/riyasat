{% macro image(link, caption, subcaption) %}
  <div class="row">
    <div class="twelve column">
      <img class="full-width" src="{{link}}" loading="lazy">
    </div>
  </div>
  <div class="row">
    <div class="twelve column">
      <p class="photojournal-image-caption">{{caption}}</p>
      <p class="photojournal-image-subcaption">{{subcaption}}</p>
    </div>
  </div>
{% endmacro %}
